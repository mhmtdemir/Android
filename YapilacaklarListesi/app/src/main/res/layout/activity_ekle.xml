<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"

        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content"
        android:background="@color/SeaGreen"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <Spinner

                    android:id="@+id/spinkategori"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:prompt="@string/Kategori"
                    style="@style/spinner_style"
                    android:popupBackground="@color/SeaGreen"
                    android:spinnerMode="dropdown" />

                <Button
                    android:background="@drawable/edittext2"
                    android:text="Kategori ekle"
                    android:textColor="@color/green"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/eklebuton" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/basliktext"
                android:hint="BAŞLIK GİR"
                android:lines="2"
                android:paddingLeft="5dp"
                android:background="@drawable/edittext2"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/green"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Açıklama Ekle"
                android:id="@+id/aciklama"
                android:lines="3"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext2"
                android:textColorHint="@color/green"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <Button

                    android:layout_marginTop="10dp"
                    android:hint="Bş Tarihi  Seç"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/tarih"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/tarih"
                    android:background="@drawable/edittext2">

                </Button>

                <Button

                    android:hint="BŞ Saati"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/saat"
                    android:layout_weight="0.50"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/edittext2"
                    android:id="@+id/saat"
                    />

            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp">

    <Button
        android:layout_width="match_parent"
        android:hint="Hatirlatma"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/edittext2"
        android:id="@+id/alarmekle"
        android:drawableRight="@drawable/alarm2"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:text="ONAYLA"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonback"
        android:id="@+id/onayla"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="İPTAL"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonback1"
        android:id="@+id/iptalet"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>